<h1>Users</h1>
<p> </p>

<p><%= link_to "blink'it", new_user_path %> </p>	 

<% if notice %>
  <p class="alert alert-success"><%= notice %></p>
<% end %>


<style type="text/css">
  .alert-success{
    color: green;
  }
</style>

<style type="text/css">
table {counter-reset: rowNumber;}
table tr td:first-child::before {
    counter-increment: rowNumber;
    content: counter(rowNumber);
}
table, th, td{
    text-align:center;
  border: 1px solid ;
}
</style>

<div>
<table style="width: 100%">
    <thead>
        <tr>
            <th>id</th>
            <th>name</th>
            <th>password</th>
            <th>edit</th>
            <th>delete</th>
            </tr>
    </thead>
    <tbody>
        <tr>
        <% @users.each do |human| %>
            <td> </td>
            <td><a href="/users/<%= human.id %>"><%= human.name %></td>
            <td><%= human.password %></td>
            <td><%= link_to "編集 Henshū", edit_user_path(human.id) %></td>
            <td><%= link_to "maestro", user_path(human.id) ,  data: {turbo_method: :delete,turbo_confirm: "Are you sure?" } %> </td>
        </tr>
    </tbody>
    <% end %>

</table>
</div>

